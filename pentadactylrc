"1.1

loadplugins '\.(js|penta)$'
group user
map -count -modes=c,i,v jk -builtin <Esc>
map -count -modes=n <C-h> -builtin gT
map -count -modes=n <C-l> -builtin gt
map -count -modes=n gt -builtin gn
map -count -modes=n j -builtin <count>8j
map -count -modes=n k -builtin <count>8k
map -count -modes=n l -builtin <count>8l
map -count -modes=n h -builtin <count>8h

" vim: set ft=pentadactyl:

set go+=NCM
set go-=ncs
